{ config, lib, pkgs, ... }:

let
  alacrittySettings = import ./alacritty-settings.nix;
in
{
  options.programs.alacritty = {
    enable = lib.mkEnableOption "Alacritty terminal emulator";

    settings = lib.mkOption {
      type = lib.types.attrs;
      default = alacrittySettings;
      description = "Configuration for Alacritty.";
    };
  };

  config = lib.mkIf config.programs.alacritty.enable {
    xdg.configFile."alacritty/alacritty.toml".text =
      lib.generators.toTOML { } config.programs.alacritty.settings;
  };
}
